<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.benjamin.ledet.budget"  >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".BudgetApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_attach_money"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.benjamin.ledet.budget.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.benjamin.ledet.budget.activity.SignInActivity">
            <intent-filter>
                <action android:name="change_account" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name="com.benjamin.ledet.budget.activity.PreferencesActivity">
        </activity>

        <activity android:name="com.benjamin.ledet.budget.activity.AutomaticAmountActivity">
            <intent-filter>
                <action android:name="automatic_amounts" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name="com.benjamin.ledet.budget.activity.CategoriesActivity">
        </activity>

        <activity android:name="com.benjamin.ledet.budget.activity.ArchivedCategoriesActivity">
        </activity>

        <activity android:name="com.benjamin.ledet.budget.activity.BackupActivity">
        </activity>

        <activity android:name="com.benjamin.ledet.budget.activity.AmountActivity">
        </activity>

        <activity android:name="com.benjamin.ledet.budget.activity.StatisticActivity">
        </activity>

        <activity android:name="com.benjamin.ledet.budget.activity.CategoryExpenseActivity" android:windowSoftInputMode="stateVisible">
        </activity>

        <activity android:name="com.benjamin.ledet.budget.activity.CategoryIncomeActivity" android:windowSoftInputMode="stateVisible">
        </activity>

    </application>

</manifest>