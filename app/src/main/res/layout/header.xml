<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:orientation="vertical"
    android:background="@color/PrimaryColorDark">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/header_civ_profile"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:src="@drawable/ic_account_circle"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:gravity="start"
        android:paddingBottom="4dp"
        android:id="@+id/header_tv_display_name"
        android:layout_above="@+id/header_tv_email"
        android:layout_alignStart="@+id/header_civ_profile" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/header_tv_email"
        android:gravity="start"
        android:layout_marginBottom="8dp"
        android:text="@string/header_unknown_user"
        android:textSize="14sp"
        android:textColor="#fff"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/header_tv_display_name" />

</RelativeLayout>