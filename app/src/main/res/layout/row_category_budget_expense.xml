<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Space />

    <ImageView
        android:id="@+id/row_category_budget_expense_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/category_icon"
        android:layout_rowSpan="3"
        />

    <TextView
        android:id="@+id/row_category_budget_expense_label"
        android:layout_column="2"
        android:layout_columnSpan="3"
        android:layout_columnWeight="1"
        android:layout_marginTop="10dp"
        android:layout_row="0"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_column="2"
        android:layout_row="1"
        android:text="@string/spending"
        android:layout_columnWeight="1"/>

    <TextView
        android:layout_column="3"
        android:layout_row="1"
        android:text="@string/budget"
        android:layout_columnWeight="1"/>

    <TextView
        android:layout_column="4"
        android:layout_row="1"
        android:text="@string/remaining"
        android:layout_columnWeight="1"/>

    <TextView
        android:id="@+id/row_category_budget_expense_spending"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:layout_row="2"
        android:textColor="@android:color/holo_red_dark" />

    <TextView
        android:id="@+id/row_category_budget_expense_budget"
        android:layout_column="3"
        android:layout_columnWeight="1"
        android:layout_row="2"
        android:textColor="@color/PrimaryColor" />

    <TextView
        android:id="@+id/row_category_budget_expense_remaining"
        android:layout_column="4"
        android:layout_columnWeight="1"
        android:layout_row="2"
        android:textColor="?attr/colorAccent" />

    <ProgressBar
        android:id="@+id/row_category_budget_expense_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_columnSpan="4"
        android:layout_columnWeight="4"
        android:layout_gravity="fill_horizontal"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_row="3" />

</GridLayout>