<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/activity_preferences_expenses_and_incomes">

        <Preference
            android:key="pref_automatic_expenses"
            android:title="@string/activity_preferences_automatic_expenses">

            <intent android:action="automatic_amounts">
                <extra android:name="amount" android:value="expenses" />
            </intent>
        </Preference>

        <Preference
            android:key="pref_automatic_incomes"
            android:title="@string/activity_preferences_automatic_incomes">

            <intent android:action="automatic_amounts">
                <extra android:name="amount" android:value="incomes" />
            </intent>
        </Preference>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/title_activity_statistic">

        <ListPreference
            android:defaultValue="@string/activity_preferences_line_chart"
            android:dialogTitle="@string/activity_preferences_chart_type"
            android:key="pref_chart_type"
            android:title="@string/activity_preferences_chart_type" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/month">

        <EditTextPreference
            android:dialogTitle="@string/activity_preferences_add_month"
            android:inputType="date"
            android:key="pref_add_month"
            android:hint="@string/activity_preferences_example_month"
            android:title="@string/activity_preferences_add_month" />

        <ListPreference
            android:dialogTitle="@string/activity_preferences_delete_month"
            android:key="pref_delete_month"
            android:title="@string/activity_preferences_delete_month" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/activity_preferences_account">

        <Preference
            android:key="pref_my_account"
            android:title="@string/activity_preferences_my_account"
            android:selectable="false"/>

        <Preference
            android:key="pref_update_account"
            android:title="@string/activity_preferences_change_account">

            <intent android:action="change_account" />

        </Preference>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/about">

        <Preference
            android:key="pref_feedback"
            android:title="@string/activity_preferences_about_feedback" />
        <Preference
            android:key="pref_rate"
            android:title="@string/activity_preferences_about_rate" />
        <Preference
            android:key="pref_version"
            android:summary="@string/version"
            android:title="@string/activity_preferences_about_version"
            android:selectable="false"/>

    </PreferenceCategory>

</PreferenceScreen>